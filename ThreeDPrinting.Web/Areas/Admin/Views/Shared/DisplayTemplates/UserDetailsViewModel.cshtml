@model UserDetailsViewModel
<p><strong>Username:</strong> @Model.Username</p>
<p><strong>Email:</strong> @Model.Email</p>
<p>
    <strong>Roles:</strong>
    <ul>
        @if (Model.Roles.Any())
        {
            @foreach (string role in Model.Roles)
            {
                <li>@role</li>
            }
        }
    </ul>
</p>