@model UserDetailsViewModel
<p><strong>Username:</strong> @Model.Username</p>
<p><strong>Email:</strong> @Model.Email</p>
<p>
    <strong>Role:</strong>
    
        @if (Model.Roles.Any())
        {
            @foreach (string role in Model.Roles)
            {
                @role
            }
        }

</p>