    <td>@Model.Email</td>
    <td>@Html.DisplayFor(model => model.IsDealer)</td> 
    <td>
        <a asp-area="Admin" asp-controller="Users" asp-action="Details" asp-route-id="@Model.Id"
           class="btn btn-default">
            Details
        </a>
        <a asp-area="Admin" asp-controller="Users" asp-action="MakeDealer" asp-route-id="@Model.Id"
           class="btn btn-primary">
            Make Dealer
        </a>
        <a asp-area="Admin" asp-controller="Users" asp-action="BanDealer" asp-route-id="@Model.Id"
           class="btn btn-danger">
